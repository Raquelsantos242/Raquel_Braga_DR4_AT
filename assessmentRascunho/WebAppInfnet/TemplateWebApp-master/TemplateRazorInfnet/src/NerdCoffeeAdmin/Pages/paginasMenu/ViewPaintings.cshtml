@page
@model MeuMiniMuseu.Pages.paginasMenu.ViewPaintingsModel
@{
}




	<table class="table table-striped table-bordered">

		<thead>
			<tr>
				<th>Id</th>
				<th>Image</th>
				<th>Nome</th>
				<th>Artista</th>
				<th>Movimento</th>
				<th>Ano de Criação</th>
				<th>Edit</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Pinturas)
			{
				<tr>
					<td>@item.Id</td>
					<td><img src="~/images/@item.ImageFile" width="200"/> </td>
					<td>@item.Nome</td>
					<td>@item.Artista</td>
					<td>@item.Movimento</td>
					<td>@item.AnoCriacao</td>
					<td><a asp-page="/paginasMenu/Edit" asp-route-id="@item.Id">Edit</a></td>
				</tr>
			}
			 @section RightFooter
{
    <img src="~/images/tempest.jpg" width="200"/>
}
		</tbody>

	</table>
    